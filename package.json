{
	"name": "cool-resume",
	"version": "0.0.3",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"wrangler:dev": "wrangler pages dev .svelte-kit/cloudflare",
		"build": "vite build",
		"preview": "vite preview",
		"proxy": "wrangler dev node_modules/cfw-bindings-wrangler-bridge/worker/index.js",
		"deploy": "npm run build && npx wrangler pages deploy .svelte-kit/cloudflare --commit-dirty=true --branch=main",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"db:gen": "drizzle-kit generate",
		"db:mig:local": "wrangler d1 migrations apply coolresume_db --local",
		"db:mig:prod": "wrangler d1 migrations apply coolresume_db --remote",
		"db:mig:preview": "wrangler d1 migrations apply coolresume_db --preview",
		"db:studio:local": "drizzle-kit studio",
		"db:studio:prod": "cross-env NODE_ENV=production drizzle-kit studio"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240620.0",
		"@skeletonlabs/skeleton": "2.10.1",
		"@skeletonlabs/tw-plugin": "0.4.0",
		"@sveltejs/adapter-auto": "^3.2.2",
		"@sveltejs/adapter-cloudflare": "^4.6.0",
		"@sveltejs/kit": "^2.5.18",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@tailwindcss/forms": "0.5.7",
		"@tailwindcss/typography": "0.5.13",
		"autoprefixer": "10.4.19",
		"cfw-bindings-wrangler-bridge": "^0.11.0",
		"drizzle-kit": "^0.22.8",
		"postcss": "8.4.39",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.5",
		"svelte": "^4.2.18",
		"svelte-check": "^3.8.4",
		"tailwindcss": "3.4.4",
		"typescript": "^5.5.3",
		"vite": "^5.3.2",
		"vite-plugin-tailwind-purgecss": "^0.3.3",
		"vitest": "^1.6.0"
	},
	"type": "module",
	"dependencies": {
		"@floating-ui/dom": "^1.6.10",
		"@lucia-auth/adapter-sqlite": "^3.0.1",
		"arctic": "^1.9.1",
		"better-sqlite3": "^9.6.0",
		"cross-env": "^7.0.3",
		"drizzle-orm": "^0.31.2",
		"wrangler": "^3.60.2",
		"zod": "^3.23.8"
	}
}
